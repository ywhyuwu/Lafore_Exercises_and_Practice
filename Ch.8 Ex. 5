#include <iostream>
using namespace std;

class time
{
private:
	int hours, minutes, seconds;
public:
	time() : hours(0), minutes(0), seconds(0)
	{}
	time(int h, int m, int s) : hours(h), minutes(m), seconds(s)
	{}
	void display() const
	{
		cout << "Current time is: " << hours << ":" << minutes << ":" << seconds << endl;
	}

	time operator + (time t)
	{
		seconds += t.seconds;
		if (seconds > 59)
		{
			minutes++;
			seconds -= 60;
		}
		minutes += t.minutes;
		if (minutes > 60)
		{
			hours++;
			minutes -= 60;
		}
		hours += t.hours;
		return time(hours, minutes, seconds);
	}

	time operator ++()
	{
		return time(++hours, ++minutes, ++seconds);
	}
	time operator ++(int)
	{
		return time(hours++, minutes++, seconds++);
	}
	time operator --()
	{
		return time(--hours, --minutes, --seconds);
	}
	time operator --(int)
	{
		return time(hours--, minutes--, seconds--);
	}
};

int main()
{
	time t1(4, 10, 3);
	time t2(5, 40, 54);
	time t3;
	t3 = t1 + t2;
	t3.display();
	t3++;
	t3.display();
	t3--;
	t3.display();
	++t3;
	t3.display();
	--t3;
	t3.display();
	cout << endl;
	cin.get();
	return 0;
}
