#include <iostream>
#include <string>
using namespace std;

class publication
{
private:
	string s;
	float price;
public:
	void getdata()
	{
		cout << "Enter the name of the publication: "; cin >> s;
		cout << "\nEnter price: "; cin >> price;
		cout << endl;
	}

	void putdata() const
	{
		cout << "Name: " << s << endl;
		cout << "Price: " << price << endl;
	}
};

class sales
{
private:
	float m[3];
public:
	void getdata()
	{
		cout << "Enter three sales for each mounth: ";
		for (int i = 0; i < 3; i++)
			cin >> m[i];
	}
	void putdata() const
	{
		cout << "Sales: " << endl;
		for (int i = 0; i < 3; i++)
			cout << m[i] << endl;
	}
};

class book : private publication, private sales
{
private:
	int page_count;
public:
	void getdata()
	{
		publication::getdata();
		sales::getdata();
		cout << "Enter page count for book: "; cin >> page_count; cout << endl;
	}
	void putdata() const
	{
		publication::putdata();
		sales::putdata();
		cout << "Pages: " << page_count << endl;
	}
};

class tape : private publication, private sales
{
private:
	float play_time;
public:
	void getdata()
	{
		publication::getdata();
		sales::getdata();
		cout << "Enter play time: "; cin >> play_time; cout << endl;
	}
	void putdata() const
	{
		publication::putdata();
		sales::putdata();
		cout << "Play time: " << play_time << endl;
	}
};
int main()
{
	book b1;
	tape t1;
	b1.getdata();
	t1.getdata();
	cout << endl << endl;
	b1.putdata();
	cout << endl << endl;
	t1.putdata();
	cin.get();
	cin.get();
	return 0;
}
