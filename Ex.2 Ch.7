#include <iostream>
#include <cstring>
#include <string>

using namespace std;

class employee
{
private:
	string name;
	long numb;
public:
	void getdata()
	{
		cout << "Enter a number of employee: "; cin >> numb;
		cout << "Enter a name of employee: "; cin >> name;
	}
	void putdata()
	{
		cout << "Employee number " << numb << " is " << name << endl;
	}
};
int main()
{
	employee arr[100];
	int n = 0;
	char ch;
	do
	{
		arr[n++].getdata();
		cout << "Do you wanna enter more? Press Y or N. "; cin >> ch;
		cout << endl;
	} while (ch != 'n');
	for (int i = 0; i < n; i++)
	{
		arr[i].putdata();
	}
	cout << endl;
	cin.get();
	cin.get();
	cin.get();
	return 0;
}
