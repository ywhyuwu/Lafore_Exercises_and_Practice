#include <iostream>
#include <cstring>
#include <string>

using namespace std;

class Distance
{
private:
	int feet;
	float inches;
public:
	Distance() : feet(0), inches(0)
	{}
	Distance(int ft, float inch) : feet(ft), inches(inch)
	{}
	void div_dist(Distance d, int divisor);
	void getdata()
	{
		cout << "Enter feet: "; cin >> feet;
		cout << "Enter inches: "; cin >> inches;
	}
	void add_dist(Distance, Distance);
	void showdata()
	{
		cout << "Feet: " << feet << "\nInches: " << inches << endl;
	}
};

void Distance::div_dist(Distance d, int divisor)
{
	float fltfeet = d.feet + d.inches / 12.0;
	fltfeet /= divisor;
	feet = int(fltfeet);
	inches = (fltfeet - feet) * 12.0;
}
void Distance::add_dist(Distance d2, Distance d3)
{
	inches = d2.inches + d3.inches;
	feet = 0;
	if (inches > 12)
	{
		feet++;
		inches -= 12;
	}
	feet += d2.feet + d3.feet;
}

