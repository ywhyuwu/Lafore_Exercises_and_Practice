//User enters coordinates of the ship and then it displays with ship's number.
#include <iostream>

using namespace std;

//10
class ship
{
private:
	static int count;
	int number, degrees;
	float minutes;
public:
	ship(): minutes(0), degrees(0)
	{
		count++;
		number = count;
	}
	void getdata()
	{
		cout << "Enter coordinates of the ship(degrees and minutes): "; cin >> degrees >> minutes;
	}
	void display()
	{
		while (minutes > 60.0)
		{
			degrees++;
			minutes -= 60;
		}
		cout << "The ship number " << number << " stay at " << degrees << '\xF8' << minutes << endl;
	}
};


