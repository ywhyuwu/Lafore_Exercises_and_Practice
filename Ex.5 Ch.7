#include <iostream>
#include <string>
#include <cstring>

using namespace std;

class fraction
{
private:
	static const int MAX = 5;
	double total;
	double arr[MAX];
	double numb;
public:
	fraction() : numb()
	{
		numb = 0; total = 0;
	}
	void getdata()
	{
		cout << "Enter a numbers: ";
		for (int i = 0; i < MAX; i++)
		{
			cin >> arr[i];
		}
	}
	double average()
	{
		for (int j = 0; j < MAX; j++)
		{
			total += arr[j];
	
		}
		total /= MAX;
		return total;
	}
};
int main()
{
	fraction f1;
	f1.getdata();
	cout << "Average is " << f1.average() << endl;
	return 0;
}
