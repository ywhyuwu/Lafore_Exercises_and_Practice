//User enters values in degrees and minutes and direction. Then it displays. Also there is initialized class that displays the same.
#include <iostream>

using namespace std;

//7
class angle
{
private:
	int degrees;
	float minutes;
	char dir;
public:
	angle(): degrees(0), minutes(0), dir(0)
	{}
	angle(int d, float m, char dir1): degrees(d), minutes(m), dir(dir1)
	{}
	void getdata()
	{
		cout << "Enter degrees: "; cin >> degrees;
		cout << "Enter minutes: "; cin >> minutes;
		cout << "Enter direction(N,S,E,W): "; cin >> dir;
	}
	void display()
	{
		while (minutes > 60.0)
		{
			degrees++;
			minutes -= 60;
		}
		cout << "Your coordinates:" << endl;
		cout << degrees << '\xF8' << minutes << "'" << " " << dir << endl;
	}
};

int main()
{
	angle a1;
	angle a2(150, 70, 'S');
	a1.getdata();
	a1.display();
	a2.display();
	cout << "That's all." << endl;
	cin.get();
	cin.get();
	return 0;
}
